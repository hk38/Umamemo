<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?background"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/text_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="A"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/text_rank"
        app:layout_constraintStart_toStartOf="@+id/text_rank"
        app:layout_constraintTop_toBottomOf="@+id/text_rank" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_rank"
        app:layout_constraintTop_toTopOf="@+id/text_rank" />

    <TextView
        android:id="@+id/text_my_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:ems="6"
        android:gravity="center"
        android:text="@string/blue_type"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/text_my_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <RatingBar
        android:id="@+id/rating_my_blue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="1"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="@+id/text_my_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_my_blue" />

    <TextView
        android:id="@+id/text_my_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:ems="6"
        android:gravity="center"
        android:text="@string/red_type"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_my_blue"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <RatingBar
        android:id="@+id/rating_my_red"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="1"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_my_red"
        app:layout_constraintTop_toBottomOf="@+id/text_my_red" />

    <TextView
        android:id="@+id/text_sire_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:ems="6"
        android:gravity="center"
        android:text="@string/blue_type"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/text_sire_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_my_blue" />

    <RatingBar
        android:id="@+id/rating_sire_blue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="1"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="@+id/text_sire_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sire_blue" />

    <TextView
        android:id="@+id/text_sire_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="6"
        android:gravity="center"
        android:text="@string/red_type"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_sire_blue"
        app:layout_constraintTop_toBottomOf="@+id/rating_my_red" />

    <RatingBar
        android:id="@+id/rating_sire_red"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="1"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_sire_red"
        app:layout_constraintTop_toBottomOf="@+id/text_sire_red" />

    <TextView
        android:id="@+id/text_family_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:ems="6"
        android:gravity="center"
        android:text="@string/blue_type"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/text_family_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_sire_blue" />

    <RatingBar
        android:id="@+id/rating_family_blue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="1"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="@+id/text_family_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_family_blue" />

    <TextView
        android:id="@+id/text_family_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="6"
        android:gravity="center"
        android:text="@string/red_type"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_family_blue"
        app:layout_constraintTop_toBottomOf="@+id/rating_sire_red" />

    <RatingBar
        android:id="@+id/rating_family_red"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="1"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_family_red"
        app:layout_constraintTop_toBottomOf="@+id/text_family_red" />

</androidx.constraintlayout.widget.ConstraintLayout>